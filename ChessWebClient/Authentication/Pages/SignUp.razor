@page "/signup"
    <div class="d-flex justify-content-center mt-5">
        <h2>Sign Up</h2>
    </div>
    <div class="d-flex justify-content-center">
        <EditForm Model="_userForSignUp" OnValidSubmit="SignUpUser" class="card card-body bg-light mt-5 col-md-5">
            <DataAnnotationsValidator />
            <div class="form-group">
                <label>Username</label>
                <InputText class="form-control" @bind-Value="_userForSignUp.Username" />
                <ValidationMessage For="@(() => _userForSignUp.Username)" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <InputText class="form-control" @bind-Value="_userForSignUp.EmailAddress" />
                <ValidationMessage For="@(() => _userForSignUp.EmailAddress)" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <InputText type="password" class="form-control" @bind-Value="_userForSignUp.Password" />
                <ValidationMessage For="@(() => _userForSignUp.Password)" />
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <InputText type="password" class="form-control" @bind-Value="_userForSignUp.ConfirmPassword" />
                <ValidationMessage For="@(() => _userForSignUp.ConfirmPassword)" />
            </div>
            @if (ShowRegistrationErrors)
            {
                <div class="alert alert-danger" role="alert">
                    @foreach (var error in Errors)
                    {
                        <p>@error</p>
                    }
                </div>
            }
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </EditForm>
    </div>

