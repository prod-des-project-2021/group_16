@page "/signin"

    <div class="d-flex justify-content-center mt-5">
        <h2>Sign In</h2>
    </div>
    <div class="d-flex justify-content-center">
        <EditForm Model="_userToSignIn" OnValidSubmit="SignInUser" class="card card-body bg-light mt-5 col-md-5">
            <DataAnnotationsValidator />
            <div class="form-group">
                <label>Username</label>
                <InputText class="form-control" @bind-Value="_userToSignIn.Username" />
                <ValidationMessage For="@(() => _userToSignIn.Username)" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <InputText type="password" class="form-control" @bind-Value="_userToSignIn.Password" />
                <ValidationMessage For="@(() => _userToSignIn.Password)" />
            </div>
            @if (ShowErrorMessage)
            {
                <div class="alert alert-danger" role="alert">
                    <p>@ErrorMessage</p>
                </div>
            }
            <button type="submit" class="btn btn-primary">Sign In</button>
        </EditForm>
    </div>
